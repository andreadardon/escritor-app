<div class="container">
  <div class="row ">
    <div class="col-lg-6 col-lg-offset-3 centered sign-in-email">
      <h2>Regístrate</h2>
      <p> Ingresa los siguientes datos  <br> para comenzar </p><br>
      <hr>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 centered sign-in-email-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="field">
        <%= f.label :correo_electrónico %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :contraseña %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :confirma_tu_contraseña %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>


      <% if params[:payment] %>
        <div class="field">
          <h1>Pay me</h1>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Regístrate" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
